{
  "name": "wdywfd",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run firebase:emulators:start\" \"next dev\"",
    "dev:mock": "NEXT_PUBLIC_API_MOCKING=enabled concurrently \"npm run firebase:emulators:start\" \"next dev\"",
    "dev:prod": "NEXT_PUBLIC_DB_PROD=enabled next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:rules": "firebase emulators:exec --only firestore \"jest --config=firebase.jest.config.js --detectOpenHandles --forceExit rules.spec\"",
    "test:coverage": "jest --collectCoverage",
    "cypress:open": "concurrently \"NEXT_PUBLIC_DB_PROD=enabled next dev\" \"cypress open\"",
    "cypress:run": "concurrently \"NEXT_PUBLIC_DB_PROD=enabled next dev\" \"cypress run\"",
    "firebase:emulators:start": "firebase emulators:start",
    "format": "prettier --write \"{pages,src}/**/*\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:coverage -- --ci",
    "prepare": "husky install",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.tsx": [
      "eslint"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.10",
    "@chakra-ui/react": "^2.3.4",
    "@chakra-ui/react-use-size": "^2.0.3",
    "@chakra-ui/theme-tools": "^2.0.11",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.9.3",
    "@heroicons/react": "^2.0.11",
    "@splitbee/web": "^0.3.0",
    "@tanstack/react-query": "^4.1.3",
    "beautiful-react-hooks": "^3.11.2",
    "firebase": "^9.9.4",
    "framer-motion": "^6.3.11",
    "jotai": "^1.7.8",
    "next": "^12.2.5",
    "nprogress": "^0.2.0",
    "pluralize": "^8.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reactfire": "^4.2.2",
    "spoonacular-js-sdk": "^0.0.4",
    "string-strip-html": "^11.0.0",
    "unicode-emoji": "^2.4.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.4",
    "@next/bundle-analyzer": "^12.3.1",
    "@ngneat/falso": "^5.7.0",
    "@tanstack/react-query-devtools": "^4.13.5",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/node": "18.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.4.0",
    "cypress": "^10.3.0",
    "cypress-firebase": "^2.2.2",
    "eslint": "^8.27.0",
    "eslint-config-next": "^12.3.0",
    "firebase-admin": "^11.4.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "msw": "^0.48.3",
    "next-router-mock": "^0.7.4",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "ts-jest": "^28.0.8",
    "typescript": "4.8.3",
    "whatwg-fetch": "^3.6.2"
  }
}
